<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>slOeuvres</servlet-name>
        <servlet-class>controleurs.slOeuvres</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>slReservation</servlet-name>
        <servlet-class>controleurs.slReservation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>slUser</servlet-name>
        <servlet-class>controleurs.slUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>slReservation</servlet-name>
        <url-pattern>*.res</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>slOeuvres</servlet-name>
        <url-pattern>*.oe</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>slStyle</servlet-name>
        <servlet-class>controleurs.slStyle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>slStyle</servlet-name>
        <url-pattern>*.style</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>slUser</servlet-name>
        <servlet-class>controleurs.slUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>slUser</servlet-name>
        <url-pattern>*.user</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
